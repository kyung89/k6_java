package com.ruby.java.ch14;

import java.util.function.Function;

class Geometry {}

class Circle extends Geometry {
	int radius;

	public Circle(int radius) {
		super();
		this.radius = radius;
	}
}

class Rectangle extends Geometry {
	int width;
	int height;
	public Rectangle(int width, int height) {
		super();
		this.width = width;
		this.height = height;
	}
}

class Triangle extends Geometry {
	int width;
	int height;
	public Triangle(int width, int height) {
		super();
		this.width = width;
		this.height = height;
	}	
}


public class Test14 {

	public static void main(String[] args) {
		
		Function<String, Integer> func = (s) -> {
			int cnt = 0;
			String[] word = s.split(" ");
			cnt = word.length;
			return cnt;
		};
		
		int wordCnt = func.apply("고개를 들어 별들을 보라 당신 발만 내다 보지말고");
		System.out.println("단어 수 : " + wordCnt);
		
		// 추가 문제
		Function<Geometry, Double> funcGeo = (g) -> {
			if(g instanceof Circle) {
				Circle n = (Circle) g;
				return n.radius * n.radius * 3.14;
			}else if (g instanceof Rectangle) {
				Rectangle n = (Rectangle) g;
				return (double) (n.width * n.height);
			}else if (g instanceof Triangle) {
				Triangle n = (Triangle) g;
				return (double) ((n.width * n.height)  / 2);
			}
			return null;
		};
		
		System.out.println(funcGeo.apply(new Circle(2)));
		System.out.println(funcGeo.apply(new Rectangle(2, 3)));
		System.out.println(funcGeo.apply(new Triangle(2, 3)));
	}
}
